<h1>Books</h1>
<table style="border-collapse:separate; border-spacing:10px">
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <!-- 空欄にするには記入しない -->
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>

          <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <!-- ここに	Show Edit Destroy -->
              <td> <%= link_to "Show", book_path(book.id) %> </td>
              <td> <%= link_to "Edit", edit_book_path(book.id) %> </td>
              <td> <%= link_to "Destroy", book_path(book.id), method: :delete %> </td>
          </tr>

        <% end %>
    </tbody>
</table>





<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <div>
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :Body %><br>
    <%= f.text_area :body %>
  </div>

  <div><%= f.submit 'Create Book' %></div>

<% end %>