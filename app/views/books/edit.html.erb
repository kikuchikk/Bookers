<h1>Editing Book</h1>

<%= form_with modele: @book, url:update_book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :Body %><br>
    <!-- <br>で改行。空白狭めになる -->
    <%= f.text_area :body %>
  </div>

  <div class="submit">
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to "Show", book_path %>
   |
  <%= link_to "Back", books_path %>

<% end %>
