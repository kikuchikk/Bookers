<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book do |f| %>

  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :Body %><br>
    <!-- <br>で改行。空白狭めになる -->
    <%= f.text_area :body %>
  </div>

  <div class="submit">
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to "Show", book_path %>
   |
  <%= link_to "Back", books_path %>

<% end %>
